<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="com.haoke.feton.pages.MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/nav_bg">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@android:color/transparent"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:scaleType="fitCenter"
            android:src="@drawable/button_home_selector" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="@string/preferences"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:layout_width="88dp"
            android:layout_height="22dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/nav_logo" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/frameLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:text="@string/external_remote_control"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/enableButton"
                    android:layout_width="118dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/button_round_corner_selector"
                    android:text="@string/enable"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/disableButton"
                    android:layout_width="118dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="24dp"
                    android:background="@drawable/button_round_corner_selector"
                    android:text="@string/disable"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/max_input_level_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:text="@string/max_input_level"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/maxInput01Button"
                    android:layout_width="118dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/button_round_corner_selector"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/maxInput02Button"
                    android:layout_width="118dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="24dp"
                    android:background="@drawable/button_round_corner_selector"
                    android:text="+6dB"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/max_output_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:text="@string/max_output_level"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/maxOutput01Button"
                    android:layout_width="118dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/button_round_corner_selector"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/maxOutput02Button"
                    android:layout_width="118dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="24dp"
                    android:background="@drawable/button_round_corner_selector"
                    android:text="+6dB"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/type2_rl"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/spdif_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/spdif_out_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="@string/spdif_out"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_below="@+id/spdif_out_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/spdif01Button"
                        android:layout_width="118dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/button_round_corner_selector"
                        android:text="@string/enable"
                        android:textAllCaps="false"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/spdif02Button"
                        android:layout_width="118dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="24dp"
                        android:background="@drawable/button_round_corner_selector"
                        android:text="@string/disable"
                        android:textAllCaps="false"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/spdif_rl_Mask"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:clickable="true"
                    android:text=""
                    android:background="#dc282d30"/>
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:text="@string/remote_led_setting"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <LinearLayout
                    android:id="@+id/main_level_rl"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/main_level_text"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/main_level"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <ImageButton
                        android:id="@+id/main_level_led_1"
                        android:layout_marginLeft="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/led_1_n" />
                    <ImageButton
                        android:id="@+id/main_level_led_2"
                        android:layout_marginLeft="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/led_2_n" />
                    <ImageButton
                        android:id="@+id/main_level_led_3"
                        android:layout_marginLeft="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/led_3_n" />
                    <ImageButton
                        android:id="@+id/main_level_led_4"
                        android:layout_marginLeft="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/led_4_n" />
                    <ImageButton
                        android:id="@+id/main_level_led_5"
                        android:layout_marginLeft="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/led_5_n" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sub_level_rl"
                    android:layout_below="@+id/main_level_rl"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/sub_level_text"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/sub_level"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <ImageButton
                        android:id="@+id/sub_level_led_1"
                        android:layout_marginLeft="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/led_1_n" />
                    <ImageButton
                        android:id="@+id/sub_level_led_2"
                        android:layout_marginLeft="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/led_2_n" />
                    <ImageButton
                        android:id="@+id/sub_level_led_3"
                        android:layout_marginLeft="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/led_3_n" />
                    <ImageButton
                        android:id="@+id/sub_level_led_4"
                        android:layout_marginLeft="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/led_4_n" />
                    <ImageButton
                        android:id="@+id/sub_level_led_5"
                        android:layout_marginLeft="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/led_5_n" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/a_rl"
                    android:layout_below="@+id/sub_level_rl"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/a_text"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/memory_a"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <ImageButton
                        android:id="@+id/a_led_1"
                        android:layout_marginLeft="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/led_1_n" />
                    <ImageButton
                        android:id="@+id/a_led_2"
                        android:layout_marginLeft="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/led_2_n" />
                    <ImageButton
                        android:id="@+id/a_led_3"
                        android:layout_marginLeft="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/led_3_n" />
                    <ImageButton
                        android:id="@+id/a_led_4"
                        android:layout_marginLeft="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/led_4_n" />
                    <ImageButton
                        android:id="@+id/a_led_5"
                        android:layout_marginLeft="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/led_5_n" />
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/a_rl"
                    android:id="@+id/b_rl"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/b_text"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/memory_b"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <ImageButton
                        android:id="@+id/b_led_1"
                        android:layout_marginLeft="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/led_1_n" />
                    <ImageButton
                        android:id="@+id/b_led_2"
                        android:layout_marginLeft="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/led_2_n" />
                    <ImageButton
                        android:id="@+id/b_led_3"
                        android:layout_marginLeft="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/led_3_n" />
                    <ImageButton
                        android:id="@+id/b_led_4"
                        android:layout_marginLeft="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/led_4_n" />
                    <ImageButton
                        android:id="@+id/b_led_5"
                        android:layout_marginLeft="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/led_5_n" />
                </LinearLayout>

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/led_rl_Mask"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:text=""
                    android:background="#dc282d30"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="12dp"
                android:text="@string/app_version"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/app_version"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="12dp"
                android:text="1.0.0"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="12dp"
                android:text="@string/mcu_version"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mcu_version"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="12dp"
                android:text="1.0.0"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
