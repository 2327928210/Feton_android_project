<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context="com.haoke.feton.pages.Led1PreferenceActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/nav_bg">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@android:color/transparent"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:scaleType="fitCenter"
            android:src="@drawable/button_home_selector" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="@string/preferences"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:layout_width="88dp"
            android:layout_height="22dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/nav_logo" />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/rel_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameLayout"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/main_level_Button"
            android:layout_width="118dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/button_round_corner_selector"
            android:gravity="center"
            android:text="Main level"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="13sp" />

        <Button
            android:id="@+id/sub_level_Button"
            android:layout_width="118dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/button_round_corner_selector"
            android:gravity="center"
            android:text="SUB level"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rel_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_1"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/memory_a_Button"
            android:layout_width="118dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/button_round_corner_selector"
            android:gravity="center"
            android:text="Memory A"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="13sp" />

        <Button
            android:id="@+id/memory_b_Button"
            android:layout_width="118dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/button_round_corner_selector"
            android:gravity="center"
            android:text="Memory B"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/rel_led_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton_led_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:padding="4dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/led_1_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="Green"
                android:textColor="@color/color_white"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rel_led_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton_led_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:padding="4dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/led_2_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="Red"
                android:textColor="@color/color_white"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rel_led_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton_led_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:padding="4dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/led_3_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text="Blue"
                android:textColor="@color/color_white"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rel_led_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton_led_4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:padding="4dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/led_4_n"
                android:textColor="@color/color_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="Orange"
                android:textColor="@color/color_white"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rel_led_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton_led_5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:padding="4dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/led_5_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="White"
                android:textColor="@color/color_white"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/rel_3"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_below="@+id/rel_2"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/redTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#00ff00"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.sdsmdg.harjot.crollerTest.Croller
                    android:id="@+id/RedCroller"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:back_circle_color="#ffffff"
                    app:indicator_color="#ffffff"
                    app:indicator_width="6"
                    app:is_continuous="true"
                    app:label=""
                    app:label_size="0"
                    app:main_circle_color="#34383b"
                    app:max="120"
                    app:min="0"
                    app:progress_primary_color="#ffffff"
                    app:progress_primary_stroke_width="4"
                    app:progress_secondary_color="#000000"
                    app:progress_secondary_stroke_width="2"
                    app:start_offset="45" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Red"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/greenTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="#00ff00"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.sdsmdg.harjot.crollerTest.Croller
                        android:id="@+id/GreenCroller"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        app:back_circle_color="#ffffff"
                        app:indicator_color="#ffffff"
                        app:indicator_width="6"
                        app:is_continuous="true"
                        app:label=""
                        app:label_size="0"
                        app:main_circle_color="#34383b"
                        app:max="120"
                        app:min="0"
                        app:progress_primary_color="#ffffff"
                        app:progress_primary_stroke_width="4"
                        app:progress_secondary_color="#000000"
                        app:progress_secondary_stroke_width="2"
                        app:start_offset="45" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Green"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/rel_4"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_below="@+id/rel_3"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/blueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#00ff00"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.sdsmdg.harjot.crollerTest.Croller
                    android:id="@+id/BlueCroller"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:back_circle_color="#ffffff"
                    app:indicator_color="#ffffff"
                    app:indicator_width="6"
                    app:is_continuous="true"
                    app:label=""
                    app:label_size="0"
                    app:main_circle_color="#34383b"
                    app:max="120"
                    app:min="0"
                    app:progress_primary_color="#ffffff"
                    app:progress_primary_stroke_width="4"
                    app:progress_secondary_color="#000000"
                    app:progress_secondary_stroke_width="2"
                    app:start_offset="45" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Blue"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/whiteTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="#00ff00"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.sdsmdg.harjot.crollerTest.Croller
                        android:id="@+id/WhiteCroller"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        app:back_circle_color="#ffffff"
                        app:indicator_color="#ffffff"
                        app:indicator_width="6"
                        app:is_continuous="true"
                        app:label=""
                        app:label_size="0"
                        app:main_circle_color="#34383b"
                        app:max="120"
                        app:min="0"
                        app:progress_primary_color="#ffffff"
                        app:progress_primary_stroke_width="4"
                        app:progress_secondary_color="#000000"
                        app:progress_secondary_stroke_width="2"
                        app:start_offset="45" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="White"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
