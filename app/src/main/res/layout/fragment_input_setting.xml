<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <LinearLayout
        android:id="@+id/loudspeakerLayout"
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:layout_margin="8dp"
        android:background="@drawable/white_border_shape"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mode1Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:text="@string/analog_input"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ch1Button"
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:text="CH1"
                    android:textAllCaps="false"
                    android:textColor="@drawable/button_text_selector"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/ch1TextView"
                    android:layout_width="52dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="0%"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:background="@drawable/black_border_shape"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ch2Button"
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:text="CH2"
                    android:textAllCaps="false"
                    android:textColor="@drawable/button_text_selector"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/ch2TextView"
                    android:layout_width="52dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="0%"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:background="@drawable/black_border_shape"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ch3Button"
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:text="CH3"
                    android:textAllCaps="false"
                    android:textColor="@drawable/button_text_selector"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/ch3TextView"
                    android:layout_width="52dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="0%"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:background="@drawable/black_border_shape"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ch4Button"
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:text="CH4"
                    android:textAllCaps="false"
                    android:textColor="@drawable/button_text_selector"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/ch4TextView"
                    android:layout_width="52dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="0%"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:background="@drawable/black_border_shape"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ch5Button"
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:text="CH5"
                    android:textAllCaps="false"
                    android:textColor="@drawable/button_text_selector"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/ch5TextView"
                    android:layout_width="52dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="0%"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:background="@drawable/black_border_shape"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ch6Button"
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:text="CH6"
                    android:textAllCaps="false"
                    android:textColor="@drawable/button_text_selector"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/ch6TextView"
                    android:layout_width="52dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="0%"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:background="@drawable/black_border_shape"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mode2Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/modeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:text="spdif_input"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/digitalLButton"
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:text="digital L"
                    android:textAllCaps="false"
                    android:textColor="@drawable/button_text_selector"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/digitalLTextView"
                    android:layout_width="52dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="0%"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:background="@drawable/black_border_shape"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/digitalRButton"
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:text="digital R"
                    android:textAllCaps="false"
                    android:textColor="@drawable/button_text_selector"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/digitalRTextView"
                    android:layout_width="52dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="0%"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:background="@drawable/black_border_shape"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/output"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Coax Center CH7"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_round_corner_selector"
                    android:text="@string/back"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"/>

                <Button
                    android:id="@+id/nextButton"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_round_corner_selector"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>