<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="com.haoke.feton.pages.InputSelectActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/nav_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@android:color/transparent"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:scaleType="fitCenter"
            android:src="@drawable/button_home_selector" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/advanced_tuning"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:layout_width="88dp"
            android:layout_height="22dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/nav_logo" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frameLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="252dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="2dp"
                android:background="@drawable/white_border_left_shape"
                android:text="" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:orientation="horizontal">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="40dp"
                            android:layout_height="32dp">

                            <ImageButton
                                android:id="@+id/analog1Button"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitXY"
                                android:src="@drawable/button_audio_interface_selector" />

                            <TextView
                                android:id="@+id/analog1_line"
                                android:layout_width="10dp"
                                android:layout_height="12dp"
                                android:gravity="center"
                                android:text="1"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:textSize="10dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                        </android.support.constraint.ConstraintLayout>

                        <TextView
                            android:id="@+id/analog1LineView"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:text="" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="40dp"
                            android:layout_height="32dp">

                            <ImageButton
                                android:id="@+id/analog2Button"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitXY"
                                android:src="@drawable/button_audio_interface_selector" />

                            <TextView
                                android:layout_width="10dp"
                                android:layout_height="12dp"
                                android:gravity="center"
                                android:text="2"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:textSize="10dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                        </android.support.constraint.ConstraintLayout>

                        <TextView
                            android:id="@+id/analog2LineView"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:text="" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="40dp"
                            android:layout_height="32dp">

                            <ImageButton
                                android:id="@+id/analog3Button"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitXY"
                                android:src="@drawable/button_audio_interface_selector" />

                            <TextView
                                android:layout_width="10dp"
                                android:layout_height="12dp"
                                android:gravity="center"
                                android:text="3"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:textSize="10dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                        </android.support.constraint.ConstraintLayout>

                        <TextView
                            android:id="@+id/analog3LineView"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:text="" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="40dp"
                            android:layout_height="32dp">

                            <ImageButton
                                android:id="@+id/analog4Button"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitXY"
                                android:src="@drawable/button_audio_interface_selector" />

                            <TextView
                                android:layout_width="10dp"
                                android:layout_height="12dp"
                                android:gravity="center"
                                android:text="4"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:textSize="10dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                        </android.support.constraint.ConstraintLayout>

                        <TextView
                            android:id="@+id/analog4LineView"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:text="" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="40dp"
                            android:layout_height="32dp">

                            <ImageButton
                                android:id="@+id/analog5Button"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitXY"
                                android:src="@drawable/button_audio_interface_selector" />

                            <TextView
                                android:layout_width="10dp"
                                android:layout_height="12dp"
                                android:gravity="center"
                                android:text="5"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:textSize="10dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                        </android.support.constraint.ConstraintLayout>

                        <TextView
                            android:id="@+id/analog5LineView"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:text="" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="40dp"
                            android:layout_height="32dp">

                            <ImageButton
                                android:id="@+id/analog6Button"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitXY"
                                android:src="@drawable/button_audio_interface_selector" />

                            <TextView
                                android:layout_width="10dp"
                                android:layout_height="12dp"
                                android:gravity="center"
                                android:text="6"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:textSize="10dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                        </android.support.constraint.ConstraintLayout>

                        <TextView
                            android:id="@+id/analog6LineView"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:text="" />

                    </LinearLayout>

                </LinearLayout>

                <com.haoke.feton.Controls.MyImageButton
                    android:id="@+id/analog1ConnectButton"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="24dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/button_output_connect_selector"
                    app:layout_constraintDimensionRatio="W,1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.haoke.feton.Controls.MyImageButton
                    android:id="@+id/analog3ConnectButton"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="112dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/button_output_connect_selector"
                    app:layout_constraintDimensionRatio="W,1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.haoke.feton.Controls.MyImageButton
                    android:id="@+id/analog5ConnectButton"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="200dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/button_output_connect_selector"
                    app:layout_constraintDimensionRatio="W,1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:background="@drawable/white_border_right_shape"
                android:orientation="vertical">

                <com.haoke.feton.Controls.VerticalTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"
                    android:text="@string/analog"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="2dp"
                android:background="@drawable/white_border_left_shape"
                android:text="" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:orientation="horizontal">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="40dp"
                            android:layout_height="32dp">

                            <Button
                                android:id="@+id/digitalLButton"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/button_circle_selector"
                                android:scaleType="fitXY"
                                android:text="L"
                                android:textColor="@android:color/white"
                                android:textSize="14sp" />

                        </android.support.constraint.ConstraintLayout>

                        <TextView
                            android:id="@+id/digitalLLineView"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:text="" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="40dp"
                            android:layout_height="32dp">

                            <Button
                                android:id="@+id/digitalRButton"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/button_circle_selector"
                                android:scaleType="fitXY"
                                android:text="R"
                                android:textColor="@android:color/white"
                                android:textSize="14sp" />

                        </android.support.constraint.ConstraintLayout>

                        <TextView
                            android:id="@+id/digitalRLineView"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:text="" />

                    </LinearLayout>

                </LinearLayout>

                <com.haoke.feton.Controls.MyImageButton
                    android:id="@+id/digitalConnectButton"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="24dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/button_output_connect_selector"
                    app:layout_constraintDimensionRatio="W,1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:background="@drawable/white_border_right_shape"
                android:orientation="vertical">

                <com.haoke.feton.Controls.VerticalTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"
                    android:text="@string/digital"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frameLayout">
        <TextView
            android:visibility="gone"
            android:id="@+id/analogMask"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clickable="true"
            android:layout_weight="5"
            android:text=""
            android:background="#dc282d30"/>
        <TextView
            android:id="@+id/digitalMask"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clickable="true"
            android:layout_weight="3"
            android:text=""
            android:background="#dc282d30"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
